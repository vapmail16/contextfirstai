@tailwind base;
@tailwind components;
@tailwind utilities;

/* Definition of the design system. All colors, gradients, fonts, etc should be defined here. 
All colors MUST be HSL.
*/

@layer base {
  :root {
    /* Legal Professional Color Palette */
    --background: 0 0% 100%;
    --foreground: 220 15% 20%;

    --card: 0 0% 100%;
    --card-foreground: 220 15% 20%;

    --popover: 0 0% 100%;
    --popover-foreground: 220 15% 20%;

    /* Legal Blue - Trust & Authority */
    --primary: 216 87% 35%;
    --primary-foreground: 0 0% 100%;
    --primary-light: 216 87% 45%;
    --primary-dark: 216 87% 25%;

    /* Accent - Professional Highlight */
    --secondary: 350 85% 50%;
    --secondary-foreground: 0 0% 100%;

    --muted: 220 15% 96%;
    --muted-foreground: 220 10% 45%;

    --accent: 216 87% 94%;
    --accent-foreground: 216 87% 25%;

    /* Status Colors */
    --success: 142 76% 36%;
    --success-foreground: 0 0% 100%;
    
    --warning: 38 92% 50%;
    --warning-foreground: 0 0% 100%;
    
    --destructive: 0 84% 60%;
    --destructive-foreground: 0 0% 100%;

    --border: 220 13% 91%;
    --input: 220 13% 91%;
    --ring: 216 87% 35%;

    --radius: 0.5rem;

    /* Professional Gradients */
    --gradient-primary: linear-gradient(135deg, hsl(216 87% 35%) 0%, hsl(216 87% 45%) 100%);
    --gradient-hero: linear-gradient(135deg, hsl(216 87% 25%) 0%, hsl(216 87% 35%) 50%, hsl(216 87% 45%) 100%);
    --gradient-card: linear-gradient(180deg, hsl(0 0% 100%) 0%, hsl(220 15% 98%) 100%);
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 hsl(220 15% 20% / 0.05);
    --shadow-md: 0 4px 6px -1px hsl(220 15% 20% / 0.1);
    --shadow-lg: 0 10px 15px -3px hsl(220 15% 20% / 0.1);
    --shadow-xl: 0 20px 25px -5px hsl(220 15% 20% / 0.1);
    
    /* Transitions */
    --transition-smooth: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-fast: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);

    --sidebar-background: 0 0% 98%;
    --sidebar-foreground: 220 15% 30%;
    --sidebar-primary: 216 87% 35%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 220 15% 95%;
    --sidebar-accent-foreground: 220 15% 30%;
    --sidebar-border: 220 13% 91%;
    --sidebar-ring: 216 87% 35%;
  }

  .dark {
    --background: 220 20% 10%;
    --foreground: 220 10% 95%;

    --card: 220 20% 13%;
    --card-foreground: 220 10% 95%;

    --popover: 220 20% 13%;
    --popover-foreground: 220 10% 95%;

    --primary: 216 87% 55%;
    --primary-foreground: 220 20% 10%;
    --primary-light: 216 87% 65%;
    --primary-dark: 216 87% 45%;

    --secondary: 350 85% 60%;
    --secondary-foreground: 220 20% 10%;

    --muted: 220 20% 18%;
    --muted-foreground: 220 10% 60%;

    --accent: 220 20% 18%;
    --accent-foreground: 216 87% 65%;

    --success: 142 76% 46%;
    --success-foreground: 220 20% 10%;
    
    --warning: 38 92% 60%;
    --warning-foreground: 220 20% 10%;
    
    --destructive: 0 84% 70%;
    --destructive-foreground: 220 20% 10%;

    --border: 220 20% 20%;
    --input: 220 20% 20%;
    --ring: 216 87% 55%;

    --gradient-primary: linear-gradient(135deg, hsl(216 87% 45%) 0%, hsl(216 87% 55%) 100%);
    --gradient-hero: linear-gradient(135deg, hsl(216 87% 35%) 0%, hsl(216 87% 45%) 50%, hsl(216 87% 55%) 100%);
    --gradient-card: linear-gradient(180deg, hsl(220 20% 13%) 0%, hsl(220 20% 15%) 100%);

    --sidebar-background: 220 20% 13%;
    --sidebar-foreground: 220 10% 85%;
    --sidebar-primary: 216 87% 55%;
    --sidebar-primary-foreground: 220 20% 10%;
    --sidebar-accent: 220 20% 18%;
    --sidebar-accent-foreground: 220 10% 85%;
    --sidebar-border: 220 20% 20%;
    --sidebar-ring: 216 87% 55%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    @apply font-semibold tracking-tight;
  }
}

@layer components {
  .gradient-primary {
    background: var(--gradient-primary);
  }

  .gradient-hero {
    background: var(--gradient-hero);
  }

  .gradient-card {
    background: var(--gradient-card);
  }

  .shadow-elegant {
    box-shadow: var(--shadow-lg);
  }

  .transition-smooth {
    transition: var(--transition-smooth);
  }

  .transition-fast {
    transition: var(--transition-fast);
  }
}
